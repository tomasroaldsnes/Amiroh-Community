<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Amiroh.ImagePage"
             Title="ImagePage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <Image x:Name="bigImage" Source="{Binding URL}" Rotation="-90" Aspect="AspectFit" HeightRequest="400" WidthRequest="400"></Image>

            <StackLayout Orientation="Horizontal">
                <Label Text="Like"></Label>
                <Label Text="Comment"></Label>
                <Label Text="Favorite"></Label>
            </StackLayout>
            
            <Label x:Name="lblUser" Text="{Binding Username}"></Label>
            <Label x:Name="bigTitle" Text="{Binding Title}" />
            <Label x:Name="lblDescription" Text="{Binding Description}"></Label>

            

        </StackLayout>
    </ContentPage.Content>
</ContentPage>