<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Amiroh.ImagePage"
             xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             Title=" "
             BackgroundColor="White"
             NavigationPage.HasNavigationBar="True"
             Padding="10,20,10,10">
   

        <ScrollView>
        <StackLayout Orientation="Vertical" BackgroundColor="White">
            <!--<Label x:Name="userName" Text="{Binding Username}" FontSize="16" VerticalOptions="EndAndExpand" HorizontalOptions="Center" FontFamily="Lato-Bold.ttf#Lato-Bold" TextColor="Black" ></Label>-->
           
 
                <!--<Image x:Name="bigImage" Source="{Binding URL}" Aspect="AspectFit" Grid.Row="0" Grid.Column="0"></Image>-->
            <ffimageloading:CachedImage HorizontalOptions="StartAndExpand" VerticalOptions="Start"
                                LoadingPriority="High"                      
                                CacheDuration="0"
			                    Source = "{Binding URL}" >
            </ffimageloading:CachedImage>

            <StackLayout Orientation="Horizontal">
                    <Image x:Name="btnPoints" Source="points.png" Aspect="AspectFit" WidthRequest="30" HeightRequest="30" VerticalOptions="Start" >
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer
                                x:Name="PointsTappedHandler"
                                Tapped="Points_Tapped"
                                NumberOfTapsRequired="1" />
                        </Image.GestureRecognizers>
                    </Image>
                    <Image x:Name="btnComment" Source="comment.png"  Aspect="AspectFit" WidthRequest="30" HeightRequest="30" VerticalOptions="Start">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer
                                Tapped="Comment_Tapped"
                                NumberOfTapsRequired="1" />
                        </Image.GestureRecognizers>
                    </Image>
                    <Image x:Name="btnCollect" Source="collectionoff.png"  Aspect="AspectFit" WidthRequest="30" HeightRequest="30" VerticalOptions="Start">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer
                                Tapped="Collection_Tapped"
                                NumberOfTapsRequired="1" />
                        </Image.GestureRecognizers>
                    </Image>
                    
                    <Label></Label>
                    <Label></Label>
                    <Label></Label>
                    
                    <Image x:Name="btnProducts" Source="feed.png"  Aspect="AspectFit" WidthRequest="30" HeightRequest="30" VerticalOptions="Start">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer
                                Tapped="Products_Tapped"
                                NumberOfTapsRequired="1" />
                        </Image.GestureRecognizers>
                    </Image>
                </StackLayout>

            <Label Text="{Binding Description}" FontFamily="Lato-Light.ttf#Lato-Light" FontSize="16" TextColor="Black" HorizontalOptions="StartAndExpand" VerticalOptions="Center"></Label>
            
            


        </StackLayout>
    </ScrollView>
  </ContentPage>