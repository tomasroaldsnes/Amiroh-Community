<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Amiroh.DiscoverPage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout BackgroundColor="White">
                <SearchBar x:Name="searchContent" Placeholder="Search">
                    
                </SearchBar>

                <Grid BackgroundColor="White" ColumnSpacing="0" RowSpacing="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Image x:Name="category1" Source="https://www.colorcombos.com/images/colors/FFCCCB.png" Grid.Row="0" Grid.Column="0" Aspect="Fill"  ></Image>
                    <Image x:Name="category2" Source="https://www.colorcombos.com/images/colors/FFCCCB.png" Grid.Row="0" Grid.Column="1" Aspect="Fill" ></Image>
                    <Image x:Name="category3" Source="https://www.colorcombos.com/images/colors/FFCCCB.png" Grid.Row="1" Grid.Column="0" Aspect="Fill" ></Image>
                    <Image x:Name="category4" Source="https://www.colorcombos.com/images/colors/FFCCCB.png" Grid.Row="1" Grid.Column="1"  Aspect="Fill"></Image>
                    <Image x:Name="category5" Source="https://www.colorcombos.com/images/colors/FFCCCB.png" Grid.Row="2" Grid.Column="0" Aspect="Fill"></Image>
                    <Image x:Name="category6" Source="https://www.colorcombos.com/images/colors/FFCCCB.png" Grid.Row="2" Grid.Column="1" Aspect="Fill"></Image>
                    <Image x:Name="category7" Source="https://www.colorcombos.com/images/colors/FFCCCB.png" Grid.Row="3" Grid.Column="0" Aspect="Fill"></Image>
                    <Image x:Name="category8" Source="https://www.colorcombos.com/images/colors/FFCCCB.png" Grid.Row="3" Grid.Column="1" Aspect="Fill"></Image>

                </Grid>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>