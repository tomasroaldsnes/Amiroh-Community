<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Amiroh.InspoPage"
             BackgroundColor="#FFFFFF"
             
             Padding="0,10,0,10">
    <StackLayout x:Name="layout">
        




<ListView x:Name="listviewInspo" BackgroundColor="White" HasUnevenRows="True"
               SeparatorVisibility="None" ItemTapped="listviewInspo_ItemTapped">
           
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                        <StackLayout Orientation="Vertical">
                            <Label Text="{Binding Username}" TextColor="Black" FontFamily="Lato-Bold.ttf#Lato-Bold" FontSize="Small" VerticalOptions="End" HorizontalOptions="StartAndExpand" ></Label>    
                            <Image x:Name="imageInspo" Source="{Binding URL}" HeightRequest="350" WidthRequest="410" Rotation="-90" Aspect="AspectFill"></Image>
                            
                            <Label></Label>
                                
                        
                           
                            
                        </StackLayout>
                    </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
                </ListView>


    </StackLayout>
</ContentPage>
